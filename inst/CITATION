year <- sub("-.*", "", meta$Date)
version <- paste("R package version", meta$Version)
url <- "https://CRAN.R-project.org/package=StatTeacherAssistant"

text_version <- paste0(
  "Christopher J. Casement and Laura A. McSweeney (",
  year,
  "). StatTeacherAssistant: An Application for Creating, Adjusting, and Checking the Suitability of Data Sets for Courses that Incorporate Introductory Statistical Methods.",
  version,
  ".",
  url
)

citHeader("To cite StatTeacherAssistant in publications use:")

citEntry(
  entry    = "Manual",
  title    = "{StatTeacherAssistant}: An Application for Creating, Adjusting, and Checking the Suitability of Data Sets for Courses that Incorporate Introductory Statistical Methods",
  author   = personList(as.person("Christopher J. Casement"), as.person("Laura A. McSweeney")),
  year     = year,
  note     = version,
  url      = url,
  textVersion = text_version
)
